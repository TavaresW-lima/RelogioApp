<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="10dp"
    android:background="@drawable/alarm_list_background"
    app:cardCornerRadius="@dimen/cardview_default_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/nome_alarme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/horario_alarme"
                android:layout_alignParentTop="true"
                android:textSize="24sp"
                android:textColor="@color/black"
                tools:text="Exercitar-se"
                />


            <TextView
                android:id="@+id/horario_alarme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/nome_alarme"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:textSize="35sp"
                tools:text="09:30"
                />


        </RelativeLayout>
</androidx.cardview.widget.CardView>