<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="br.com.william.a2pdm.viewModels.fragments.RelogioFragmentViewModel" />
    </data>

    <RelativeLayout

        android:id="@+id/relogio_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextClock
            android:id="@+id/relogio_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingBottom="10dp"
            android:textAlignment="center"
            android:textSize="62sp"
            android:textColor="#FF000000"
            android:format24Hour="HH:mm:ss"
            tools:text="00:00:00" />

        <TextView
            android:id="@+id/relogio_caption"
            tools:ignore="hardCodedText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HorÃ¡rio atual do sistema"
            android:textAlignment="center"
            android:layout_below="@id/relogio_text"
            />


    </RelativeLayout>
</layout>